<?xml version="1.0" encoding="UTF-8" ?>
<server>
    <service>
        <connector protocol="HTTP/1.1" port="8080" maxThread="30" />
        <webroot>src/main/webapp</webroot>
        <not-found-page>404.html</not-found-page>
    </service>
    <type-mapping>
        <type-mapping ext="html" type="text/html" />
        <type-mapping ext="jpg" type="image/jpeg" />
        <type-mapping ext="png" type="image/png" />
        <type-mapping ext="css" type="text/css" />
        <type-mapping ext="js" type="application/javascript" />
        <type-mapping ext="ico" type="image/ico" />
    </type-mapping>
</server>